#!/usr/bin/env perl

use strict;
use warnings;

use FindBin;
use Catlady;
use AnyEvent::Log;
use AnyEvent::Debug;

if (-e "$FindBin::Bin/../var/shell.sock") {
  die "debug socket exists!";
}

$AnyEvent::Log::FILTER->level("info");
$AnyEvent::Log::COLLECT->attach(AnyEvent::Log::Ctx->new(level => "info"));

use JSON::XS;

my $config = do {
  local $/;
  open my $fh, '<', $ARGV[0] or die "need config file";
  decode_json <$fh>;
};

our $SHELL = AnyEvent::Debug::shell "unix/", "$FindBin::Bin/../var/shell.sock";
our $catlady = Catlady->new(%$config);
$catlady->run;
